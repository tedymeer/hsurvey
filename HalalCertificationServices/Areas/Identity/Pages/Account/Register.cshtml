@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}



<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h1 style="text-align: center; margin-top:10px; font-weight:500">@ViewData["Title"]</h1>
            <h4 style="text-align: center;">Create a new admin account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.EmailPassword"></label>
                <input asp-for="Input.EmailPassword" class="form-control" />
                <span asp-validation-for="Input.EmailPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmEmailPassword"></label>
                <input asp-for="Input.ConfirmEmailPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmEmailPassword" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center;">
                <button type="submit" class="btn btn-primary">Register</button>
                </div>
        </form>
    </div>
    <div class="col-md-3"></div>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
